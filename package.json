{
  "name": "jamp3",
  "version": "0.6.0",
  "author": "ffalt",
  "license": "MIT",
  "description": "mp3, id3v1, id3v2 - reader & writer",
  "keywords": [
    "mp3",
    "ID3",
    "ID3v1",
    "ID3v2",
    "nodejs",
    "cli"
  ],
  "bin": {
    "mp3-analyze": "./bin/analyzeMP3.js",
    "id3v2-dump": "./bin/dumpID3v2.js",
    "id3v1-dump": "./bin/dumpID3v1.js",
    "id3v1-remove": "./bin/removeID3v1.js"
  },
  "scripts": {
    "clean": "rm -Rf dist",
    "build": "npm run clean && npm run build:dist",
    "build:dist": "tsc",
    "build:deploy": "npm run build",
    "build:docs": "typedoc --options typedoc.json && touch ./docs/.nojekyll",
    "build:releaselog": "conventional-changelog -p angular -r 2 -o RELEASELOG.md",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "check": "qlty check --all",
    "release": "standard-version -a",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "commander": "14.0.0",
    "fs-extra": "11.3.0",
    "iconv-lite": "0.6.3",
    "memory-stream": "1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@stylistic/eslint-plugin": "5.2.2",
    "@types/debug": "4.1.12",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "30.0.0",
    "@types/node": "24.1.0",
    "@types/tmp": "0.2.6",
    "conventional-changelog-cli": "5.0.0",
    "eslint": "9.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-unicorn": "60.0.0",
    "jest": "30.0.5",
    "standard-version": "9.5.0",
    "tmp": "0.2.3",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typedoc": "0.28.7",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin",
    "dist",
    "src",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ffalt/jamp3.git"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
