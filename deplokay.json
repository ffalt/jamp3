{
  "$schema": "node_modules/deplokay/config-schema.json",
  "id": "deplokay/master",
  "mode": "npm",
  "source": {
    "local": {
      "path": "."
    }
  },
  "build": {
    "npm": {
      "cmd_name": "build:deploy",
      "slim_package": true,
      "component_names": [
        "dist",
        "bin",
        "src",
        "LICENSE",
        "package.json",
        "README.md"
      ]
    }
  },
  "publish": {
    "folder": {
      "path": "./local/current"
    },
    "archive": {
      "path": "./local/archives"
    },
    "branch": {
      "branch": "releases"
    }
  }
}
